<!DOCTYPE html>
<html lang="ko">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Color Pick! - 게임</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <style>
        @import url('https://fonts.googleapis.com/css2?family=Noto+Sans+KR:wght@400;700&display=swap');
        :root {
            --primary-color: #3b82f6;
            --success-color: #10b981;
            --error-color: #ef4444;
        }
        body {
            font-family: 'Noto Sans KR', sans-serif;
            background-color: #f7f7f7;
            display: flex;
            justify-content: center;
            align-items: flex-start;
            min-height: 100vh;
            padding: 20px;
        }
        .game-container {
            width: 100%;
            max-width: 600px;
            background: white;
            padding: 24px;
            border-radius: 16px;
            box-shadow: 0 10px 15px rgba(0, 0, 0, 0.1);
        }
        .game-grid {
            display: grid;
            gap: 5px; /* 블록 사이 간격 */
            margin-top: 20px;
            margin-bottom: 20px;
        }
        .grid-item {
            aspect-ratio: 1 / 1; /* 정사각형 유지 */
            cursor: pointer;
            border-radius: 8px;
            transition: transform 0.1s;
        }
        .grid-item:hover {
            transform: scale(1.03);
        }
        /* 메시지 박스 스타일 */
        #message-box {
            position: fixed;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            background: rgba(0, 0, 0, 0.8);
            color: white;
            padding: 30px 50px;
            border-radius: 12px;
            z-index: 100;
            text-align: center;
            display: none;
            flex-direction: column;
            gap: 15px;
            font-size: 1.25rem;
            box-shadow: 0 0 20px rgba(0, 0, 0, 0.5);
        }
        #message-box button {
            background-color: var(--primary-color);
            padding: 10px 20px;
            border-radius: 8px;
            font-weight: bold;
            transition: background-color 0.2s;
        }
        #message-box button:hover {
            background-color: #2563eb;
        }
    </style>
</head>
<body>

<div class="game-container">
    <h1 class="text-3xl font-bold text-gray-800 text-center mb-4">Color Pick!</h1>
    
    <!-- 게임 정보 영역 -->
    <div class="flex justify-between items-center text-xl font-medium text-gray-700 p-2 border-b-2 border-gray-200">
        <span id="timer">시간: 0.00초</span>
        <span id="level">레벨: 1 / 10</span>
    </div>

    <!-- 색상 블록 그리드 영역 -->
    <div id="gameGrid" class="game-grid">
    </div>

    <!-- 상태 메시지 영역 (선택/오류 등) -->
    <div id="statusMessage" class="text-center text-lg h-8">게임을 시작하세요!</div>

    <!-- 스테이지 클리어 메시지 박스 -->
    <div id="message-box">
        <div id="message-title" class="font-bold text-2xl"> 스테이지1 클리어!!!</div>
        <div id="message-time">클리어 시간: 0.00초</div>
        <button id="closeMessageBtn">스테이지 선택으로 돌아가기</button>
    </div>

</div>

<script>
    //설정 변수
    const CURRENT_STAGE_ID = "<%= stageId %>";
    const MAX_LEVEL = 10;
    const START_SIZE = 3;
    const MAX_SIZE = 7; 

    //DOM 요소
    const gameGrid = document.getElementById('gameGrid');
    const timerDisplay = document.getElementById('timer');
    const levelDisplay = document.getElementById('level');
    const statusMessage = document.getElementById('statusMessage');
    const messageBox = document.getElementById('message-box');
    const messageTime = document.getElementById('message-time');
    const closeMessageBtn = document.getElementById('closeMessageBtn');

    //게임 상태
    let currentLevel = 1;
    let gridSize = START_SIZE;
    let correctCellIndex = -1;
    let baseHsl = {}; //색상을 HSL로 저장
    let diffColorCss = ''; // 정답 블록에 적용될 CSS HSL 문자열
    let baseColorCss = '';
    let startTime = 0;
    let timerInterval = null;
    let gameActive = false;

    //유틸리티 함수

    // HSL 객체 {h: 0-360, s: 0-100, l: 0-100} 생성
    function getRandomHsl() {
        return {
            h: Math.floor(Math.random() * 360), // 색상 (0-360)
            s: Math.floor(Math.random() * 40) + 40, // 채도 (40-80% 사이로 유지)
            l: Math.floor(Math.random() * 40) + 40  // 명도 (40-80% 사이로 유지)
        };
    }
    
    // HSL 객체를 CSS 문자열로 변환
    function hslToCss(hsl) {
        return `hsl(${hsl.h}, ${hsl.s}%, ${hsl.l}%)`;
    }

    // 레벨에 따른 색상 차이 계산 (난이도 핵심 로직)
    function calculateDifficulty(level) {
        // 레벨이 높아질수록 차이(diff)는 작아짐 = 어려움
        // 레벨 1: diff 25 | 레벨 10: diff 10
        return Math.max(10, 25 - (level * 1.5)); 
    }

    // 스테이지별로 다른 색상 차이 적용
    function getDiffHsl(baseHsl, level) {
        const diff = calculateDifficulty(level);
        const newHsl = { ...baseHsl };
        
        // Stage 1: 명도만 다르게
        if (CURRENT_STAGE_ID == 1) {
            // 명도(L)만 diff만큼 조정. 0-100 범위를 벗어나지 않도록 Math.min/max 사용
            newHsl.l = Math.min(100, Math.max(0, baseHsl.l + diff * (baseHsl.l > 50 ? -1 : 1))); 
        } 
        // Stage 2: 채도만 다르게
        else if (CURRENT_STAGE_ID == 2) {
            // 채도(S)만 diff*2만큼 조정 (diff만큼만 하면 잘 안보이더라고요 )
            newHsl.s = Math.min(100, Math.max(0, baseHsl.s + diff * 2 * (baseHsl.s > 50 ? -1 : 1)));
        } 
        // Stage 3: 색상만 다르게
        else if (CURRENT_STAGE_ID == 3) {
            // 색상(H)만 diff만큼 조정. 0-360 범위 유지
            newHsl.h = (baseHsl.h + diff) % 360; 
        }
        
        return newHsl;
    }

    // 타이머 함수
    function startTimer() {
        if (timerInterval) clearInterval(timerInterval);
        startTime = Date.now();
        timerInterval = setInterval(updateTimer, 100); // 0.1초마다 업데이트
    }

    function stopTimer() {
        clearInterval(timerInterval);
    }

    function updateTimer() {
        const elapsedTime = (Date.now() - startTime) / 1000;
        timerDisplay.textContent = `시간: ${elapsedTime.toFixed(2)}초`;
    }

    // ***게임 로직 ***

    // 그리드 크기를 업데이트하고 레벨에 따라 난이도를 조정
    function updateGridSize() {
        // 레벨 1~3: 3x3 | 4~6: 4x4 | 7~9: 5x5 | 10: 6x6
        if (currentLevel <= 3) gridSize = 3;
        else if (currentLevel <= 6) gridSize = 4;
        else if (currentLevel <= 9) gridSize = 5;
        else if (currentLevel <= 10) gridSize = 6; 
        // else gridSize = MAX_SIZE;  추가 레벨기능 구현시

        //HSL 색상 및 정답위치 설정
        baseHsl = getRandomHsl();
        const diffHsl = getDiffHsl(baseHsl, currentLevel);

        baseColorCss = hslToCss(baseHsl);
        diffColorCss = hslToCss(diffHsl);
        
        correctCellIndex = Math.floor(Math.random() * (gridSize * gridSize));
    }

    // 그리드 생성 및 이벤트 바인딩
    function generateGrid() {
        if (!gameActive) return;

        gameGrid.innerHTML = '';
        gameGrid.style.gridTemplateColumns = `repeat(${gridSize}, 1fr)`;

        const totalCells = gridSize * gridSize;

        for (let i = 0; i < totalCells; i++) {
            const cell = document.createElement('div');
            cell.classList.add('grid-item');
            
            // 정답 블록과 나머지 블록의 색상 설정
            const colorToUse = i === correctCellIndex ? diffColorCss : baseColorCss;
            cell.style.backgroundColor = colorToUse;
            
            cell.dataset.index = i;
            cell.addEventListener('click', handleCellClick);
            gameGrid.appendChild(cell);
        }
    }
    
    // 블록 클릭 핸들러
    function handleCellClick(event) {
        if (!gameActive) return;

        const clickedIndex = parseInt(event.target.dataset.index);

        if (clickedIndex === correctCellIndex) {
            // 정답 처리
            statusMessage.classList.add('text-success-color');
            statusMessage.classList.remove('text-error-color');
            
            currentLevel++;

            if (currentLevel > MAX_LEVEL) { //스테이지 클리어시 게임 끝, 아니면 다음 레벨 호출

                finishGame(true);
            } 
            
            else {

                setTimeout(() => { 
                    startNextLevel();
                });
            }

        } else {
            // 오답 처리
            statusMessage.classList.add('text-error-color');
            statusMessage.classList.remove('text-success-color'), 800;

            // 오답 시 색상 구별을 쉽게 난이도 완화
            setTimeout(() => {
                // 다시 생성
                updateGridSize(); 
                generateGrid();
                statusMessage.textContent = '다시 시도해 보세요!';
            });
        }
    }

    // 다음 레벨 시작
    function startNextLevel() {
        levelDisplay.textContent = `레벨: ${currentLevel} / ${MAX_LEVEL}`;
        statusMessage.textContent = '';
        updateGridSize();
        generateGrid();
    }

    // 게임 시작
    function initializeGame() {
        currentLevel = 1;
        gameActive = true;
        
        startTimer();
        startNextLevel();
    }

    // 게임 종료 및 결과 처리
    async function finishGame(isWin) {
        gameActive = false;
        stopTimer();

        const finalTime = ((Date.now() - startTime) / 1000).toFixed(2);
        
        if (isWin) {
            messageTime.textContent = `클리어 시간: ${finalTime}초`;
            showMessageBox(true, finalTime);

            const cookieName = 'stage' + CURRENT_STAGE_ID + '_time';
            const timevalue = finalTime;
            setCookie(`record_${CURRENT_STAGE_ID}`,finalTime, 7);
            setCookie("final_score", timevalue, 7);
            
            try { //서버 전송
                const response = await fetch('/api/save-record', { 
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify({
                        //stageId: CURRENT_STAGE_ID,
                        time: Number(finalTime),
                        userId: currentUser?.id||null,
                        username: currentUser?.username || '',
                    })
                });

                if (response.ok) {
                    const result = await response.json();
                    console.log('기록 저장 성공:', result);

                    window.location.href = 'stage/ejs'; //저장 후 페이지 이동
                } else {
                    console.error('기록 저장 실패:', response.statusText);
                }
            } catch (error) {
                console.error('기록 전송 중 오류 발생:', error);
            }
        }
    }

    // 메시지 박스 표시/숨김
    function showMessageBox(isWin, time) {
        if (isWin) {
            messageBox.style.display = 'flex';
        } else {
            messageBox.style.display = 'none';
        }
    }

    // 스테이지 선택으로 돌아가기
    closeMessageBtn.addEventListener('click', () => {
        window.location.href = '/stage'; 
    });


    //초기화
    window.onload = initializeGame;

</script>
</body>
</html>
